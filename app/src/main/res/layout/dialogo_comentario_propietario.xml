<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="right"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="left|bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comentario_al_propietario"
                android:textSize="@dimen/questions_size"
                android:layout_marginLeft="20dp"
                android:textColor="@color/nombre.asesor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:padding="20dp"
           >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/titulo.dialogo.firma"
                android:id="@+id/et_cometario_propietario"
                android:textAlignment="center"
                android:hint="@string/escribir_aqui_comentario"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:id="@+id/bt__dialogo_cancelar"
                android:text="@string/bt_cancelar_dialogos"
                android:background="@drawable/my_button_bg"

                />
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/bt_aceptar_dialogos"
                android:id="@+id/bt_dialogo_aceptar"
                android:background="@color/titulo.asesor"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>