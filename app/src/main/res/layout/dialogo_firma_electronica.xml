<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center"

    >
    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="30dp"
        android:background="@color/nombre.asesor"
        android:orientation="horizontal"
        android:gravity="right"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firma"
                android:layout_gravity="center"
                android:textColor="@color/titulo.dialogo.firma"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="right">
            <ImageButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tache"
                android:id="@+id/cerrar"
                android:layout_marginTop="5dp"
                android:background="@drawable/boton_redondo"
                android:layout_marginRight="7dp"
                />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="310dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6">
            <com.github.gcacace.signaturepad.views.SignaturePad
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/signature_pad" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:text="@string/firma_corregir"
                android:id="@+id/clear_button"
                android:background="@color/nombre.asesor"
                />
            <Button
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:id="@+id/save_button"
                android:text="@string/firma_aceptar"
                android:background="@color/nombre.asesor"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firma_leyenda"
                android:textAlignment="center"/>

        </LinearLayout>





    </LinearLayout>


</LinearLayout>