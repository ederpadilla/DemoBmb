<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.26"
        android:textAlignment="center"
        android:text="@string/pregunta_nueve"
        android:textStyle="bold"
        android:textSize="@dimen/questions_size"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".8">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:textAlignment="center"
            android:background="@drawable/my_edittext_bg"
            android:id="@+id/comentariofinalNueve"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.24"
    android:layout_marginLeft="90dp"
    android:layout_marginRight="90dp"
    android:weightSum="2">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="20sp"
            android:id="@+id/checkbox_recibir_notificaciones"
            android:text="@string/deseo_recibir_ofertas"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:text="@string/firma"
        android:id="@+id/firmadigital"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="@dimen/questions_size"
        />

</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.25"
    android:gravity="center">
        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="@string/firma_aceptar"
            android:background="@color/salmon_orange"
            style="@style/Btns_questions"
            android:id="@+id/final1"/>
</LinearLayout>
</LinearLayout>

